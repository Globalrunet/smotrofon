<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        android:layout_marginTop="0dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:use_artwork="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/video_content"
        android:layout_height="0dip"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="start">
            <LinearLayout
                android:id="@+id/title_block"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="0dip"
                android:layout_marginEnd="0dip"
                android:weightSum="10"
                android:gravity="start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginStart="0dip"
                    android:layout_marginEnd="0dip"
                    android:layout_weight="9"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/title"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dip"
                        android:layout_marginBottom="0dip"
                        android:layout_marginStart="20dip"
                        android:layout_marginEnd="20dip"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:id="@+id/video_description"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="0dip"
                        android:layout_marginBottom="8dip"
                        android:layout_marginStart="20dip"
                        android:layout_marginEnd="20dip"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
                <ImageView
                    android:id="@+id/icon_arrow_down"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dip"
                    android:layout_marginStart="10dip"
                    android:layout_marginEnd="10dip"
                    android:layout_marginBottom="6dip"
                    android:layout_weight="1"
                    android:src="@mipmap/outline_expand_more_black_24">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/control_buttons"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="20dip"
                android:layout_marginEnd="20dip"
                android:background="@color/white"
                android:weightSum="4"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@+id/title_block"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >
                <LinearLayout
                    android:id="@+id/block_like"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:gravity="center"
                    tools:ignore="Suspicious0dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/icon_like"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dip"
                        android:layout_marginStart="10dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginBottom="6dip"
                        android:background="@color/transparent"
                        android:src="@mipmap/baseline_thumb_up_off_alt_black_24">
                    </ImageButton>
                    <TextView
                        android:id="@+id/title_icon_like"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="0dip"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Лайк" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/block_dislike"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:gravity="center"
                    tools:ignore="Suspicious0dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/icon_dislike"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dip"
                        android:layout_marginStart="10dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginBottom="6dip"
                        android:background="@color/transparent"
                        android:src="@mipmap/baseline_thumb_down_off_alt_black_24">
                    </ImageButton>
                    <TextView
                        android:id="@+id/title_icon_dislike"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="0dip"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Дизлайк" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/block_share"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:gravity="center"
                    tools:ignore="Suspicious0dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/icon_share"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dip"
                        android:layout_marginStart="10dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginBottom="6dip"
                        android:background="@color/transparent"
                        android:src="@mipmap/baseline_share_black_24">
                    </ImageButton>
                    <TextView
                        android:id="@+id/title_icon_share"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="0dip"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Поделиться" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/block_download"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/icon_download"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dip"
                        android:layout_marginStart="10dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginBottom="6dip"
                        android:background="@color/transparent"
                        android:src="@mipmap/baseline_download_black_24">
                    </ImageButton>
                    <TextView
                        android:id="@+id/title_icon_download"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="0dip"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Загрузить" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:background="@color/grey_light"
                app:layout_constraintTop_toBottomOf="@+id/control_buttons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/user_container"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:paddingTop="16dip"
                android:paddingBottom="6dip"
                android:weightSum="20"
                app:layout_constraintTop_toBottomOf="@+id/control_buttons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    app:layout_constraintDimensionRatio="1:1"
                    android:layout_marginTop="0dip"
                    android:layout_marginStart="20dip"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_weight="10"
                    app:layout_constraintStart_toEndOf="@+id/user_icon"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/user_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="0dip"
                        android:layout_marginBottom="2dip"
                        android:layout_marginStart="10dip"
                        android:layout_marginEnd="10dip"
                        android:gravity="start"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text=""
                        tools:ignore="RtlHardcoded" />
                    <TextView
                        android:id="@+id/user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="0dip"
                        android:layout_marginBottom="0dip"
                        android:layout_marginStart="10dip"
                        android:layout_marginEnd="10dip"
                        android:gravity="start"
                        android:textColor="@color/grey"
                        android:textSize="13sp"
                        tools:text=""
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <TextView
                    android:id="@+id/user_subscribe"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="0dip"
                    android:layout_marginBottom="2dip"
                    android:layout_marginStart="10dip"
                    android:layout_marginEnd="20dip"
                    android:gravity="end"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/subscribe_title"
                    android:layout_weight="8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/comments_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dip"
                app:layout_constraintTop_toBottomOf="@+id/user_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >
                <ImageView
                    android:id="@+id/commentsUserIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/content_channel_icon" />

                <TextView
                    android:id="@+id/addCommentTextLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    android:paddingStart="12dip"
                    android:paddingEnd="12dip"
                    app:layout_constraintBottom_toBottomOf="@id/commentsUserIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/commentsUserIcon"
                    app:layout_constraintTop_toTopOf="@id/commentsUserIcon"
                    android:background="@drawable/rounded_edges_light"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/comments_add_comment_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/comments_block"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/prepend_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/green_success"
        app:trackColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>