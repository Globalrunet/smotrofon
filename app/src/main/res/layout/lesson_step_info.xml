<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingBottom="10dip"
        android:textSize="@dimen/list_firstline_textsize" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingBottom="15dip"
        android:textSize="@dimen/description_textsize" />

    <TextView
        android:id="@+id/tips"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="@dimen/step_button_sidemargin"
        android:background="@drawable/tips_rounded_edges"
        android:gravity="top|start"
        android:paddingLeft="10dip"
        android:paddingTop="4dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingBottom="15dip"
        android:textSize="@dimen/description_textsize" />

    <ImageView
        android:id="@+id/lesson_step_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
    </ImageView>
</LinearLayout>