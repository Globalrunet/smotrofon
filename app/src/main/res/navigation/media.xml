<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media"
    app:startDestination="@+id/mediaScreen">

    <fragment
        android:id="@+id/mediaScreen"
        android:name="com.mobilicos.smotrofon.ui.media.list.MediaListFragment"
        android:label="@string/menu_item_media"
        tools:layout="@layout/media_list">
        <action
            android:id="@+id/action_media_to_userContent"
            app:destination="@id/userContentScreen"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>
    <fragment
        android:id="@+id/userContentScreen"
        android:name="com.mobilicos.smotrofon.ui.channels.content.UserContentFragment"
        android:label="@string/menu_item_media"
        tools:layout="@layout/fragment_messanger" />
</navigation>
